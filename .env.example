# ================================
# Architect Agent - Environment Variables
# ================================
# Copy this file to .env and fill in the values

# ============ MongoDB ============
# MongoDB Atlas connection string
MONGODB_URI=mongodb+srv://user:password@cluster.xxxxx.mongodb.net/?retryWrites=true&w=majority
MONGODB_DB_NAME=architect_agent
MONGODB_MAX_POOL_SIZE=10
MONGODB_MIN_POOL_SIZE=1

# ============ Claude API ============
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-api...
CLAUDE_MODEL=claude-sonnet-4-20250514
CLAUDE_MAX_TOKENS=4096
CLAUDE_TEMPERATURE=0.7

# ============ Redis (Optional) ============
# Leave empty to disable Redis caching
REDIS_URL=

# ============ CORS ============
# Comma-separated list of allowed origins
# Use * for development, specific URLs for production
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# ============ Agent Settings ============
MAX_ITERATIONS=5
MIN_CONFIDENCE=0.7

# ============ App Settings ============
APP_NAME=Architect Agent
DEBUG=true
LOG_LEVEL=DEBUG
